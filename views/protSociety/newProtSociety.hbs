<div class="h-screen w-auto overflow-y-hidden bg-brown text-green">
  <a href="/">
    <div class="h-10">
      <img class="mt-5 pt-1 pl-6 w-[7.8rem]" src="/img/LOGO.png" alt="AdoptMe Logo" />
    </div>
  </a>
  <div class="flex items-center justify-center">
    <img class="absolute mt-8 w-1/6" src="/img/DOG.png" alt="Dog Logo" />
  </div>
  <h1 class="mt-10 mb-4 text-center font-lobster text-4xl">NUEVA
    PROTECTORA</h1>

  <div class="absolute w-screen mt-12">
    <form class="mt-5" action="/protSociety" method="POST">
      <div class="flex justify-center relative">
        <div id="modal-url" class="hidden h-8 bottom-12 absolute z-10 bg-brown opacity-90 text-green w-10/12 items-center justify-start px-1 py-1 font-poppins text-sm font-medium rounded-full">
          <div class="flex gap-2 top-0 -mt-6 right-0 absolute">
            <button onclick="onCrossClick()" type="button" class="flex justify-center items-center h-[2rem] w-[2rem] rounded-full bg-white">
              <span class="fa fa-times text-red"></span>
            </button>
            <button onclick="onCheckClick()" type="button" class="flex justify-center items-center h-[2rem] w-[2rem] rounded-full bg-white">
              <span class="fa fa-check text-green"></span>
            </button>
          </div>
          <img class="mx-2 h-auto w-4" src="/img/USER_ICON_GREEN.png" alt="user icon">
          <input class="w-11/12 bg-transparent focus:outline-none placeholder-green" name="image" type="text" id="image" placeholder="Escribe la url de tu imagen">
        </div>
        <div
          class="flex h-[9rem] w-[9rem] items-center justify-center rounded-full border-[6px] border-brown relative"
        >
          <div class="h-[7.5rem] w-[7.5rem] rounded-full object-cover object-top relative">
            <img
              id="protSocietyImage" 
              class="h-[7.5rem] w-[7.5rem] rounded-full object-cover object-top text-brown"
              src=""
              alt=""
            /> 
            <p
              id="tuImagen" class="h-[7.5rem] w-[7.5rem] rounded-full object-cover object-top text-brown flex text-center items-center justify-center absolute top-0"
            > Tu imagen 
            </p>
            <button onclick="onCameraClick()" type="button" class="flex justify-center items-center h-[2.5rem] w-[2.5rem] rounded-full absolute bg-white bottom-0 right-0">
              <span class="fa fa-camera text-green"></span>
            </button>
          </div>
        </div>
      </div>

      <div class="h-14 mt-3">
        <div
          class="ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.name}}border-b-rose-300 text-sm block{{/if}}" 
        >
          <img
            class="mr-2 h-auto w-4"
            src="/img/USER_ICON.png"
            alt="user icon"
          />
          <input
            class="w-11/12 bg-transparent placeholder-brown placeholder:opacity-50 focus:outline-none"
            name="name"
            type="text"
            id="name"
            value="{{protSociety.name}}"
            autocomplete="off"
            placeholder="Nombre" 
            onclick="this.select()"
          />
        </div>
        {{#if errors.name}}
          <p class="ml-8 text-xs text-rose-300 ">*{{errors.name}}</p>
        {{/if}}
      </div>

      <div class="h-14 mt-3">
        <div
          class="ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.email}}border-b-rose-300  text-sm block{{/if}}"
        >
          <img
            class="mr-2 h-auto w-4"
            src="/img/MAIL_ICON.png"
            alt="user icon"
          />
          <input
            class="w-11/12 bg-transparent placeholder-brown placeholder:opacity-50 focus:outline-none"
            name="email"
            type="email"
            id="email"
            value="{{protSociety.email}}"
            placeholder="Email"
            onclick="this.select()"
          />
        </div>
        {{#if errors.email}}
          <p class="ml-8 text-xs text-rose-300 ">*{{errors.email}}</p>
        {{/if}}
      </div>

      <div class="h-14 mt-3">
        <div
          class="ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.location}}border-b-rose-300 text-sm  block{{/if}}" 
        >
          <img
            class="mr-2 h-auto w-4"
            src="/img/LOCATION_ICON_BROWN.png"
            alt="user icon"
          />
          <input
            class="w-11/12 bg-transparent placeholder-brown placeholder:opacity-50 focus:outline-none"
            name="location"
            type="text"
            id="location"
            value="{{protSociety.location}}"
            placeholder="Localización" 
            onclick="this.select()"
          />
        </div>
        {{#if errors.location}}
          <p class="ml-8 text-xs text-rose-300 ">*{{errors.location}}</p>
        {{/if}}
      </div>

      <div class="h-14 mt-3">
        <div
          class="ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown"
        >
          <img
            class="mr-2 h-auto w-4"
            src="/img/WEB-ICON.svg"
            alt="user icon"
          />
          <input
            class="w-11/12 bg-transparent placeholder-brown placeholder:opacity-50 focus:outline-none"
            name="website"
            type="text"
            id="website"
            value="{{protSociety.website}}"
            placeholder="Página Web"
            onclick="this.select()"
          />
        </div>
      </div>

      <div class="h-14 mt-3">
        <div
          class="ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.password}}border-b-rose-300 text-sm  block{{/if}}"
        >
          <img
            class="mr-2 h-auto w-4"
            src="/img/PASS_ICON.png"
            alt="user icon"
          />
          <input
            class="w-11/12 bg-transparent placeholder-brown placeholder:opacity-50 focus:outline-none"
            name="password"
            type="password"
            id="password"
            value="{{protSociety.password}}"
            placeholder="Contraseña" 
            onclick="this.select()"
          />
        </div> 
        {{#if errors.password}}
          <p class="ml-8 text-xs text-rose-300 ">*{{errors.password}}</p>
        {{/if}}
      </div>

      <button
        class="mx-auto mt-6 block w-6/12 items-center rounded-full bg-brown px-3 py-1 text-center font-poppins text-lg font-medium text-green"
        type="submit"
      >Crear</button>
    </form>
  </div>

  <div class="h-screen rounded-t-3xl bg-green"></div>

    <script lang="js">
    function onCameraClick() {
      const imageUrlInput = document.querySelector('#modal-url')
      const imageInput = document.querySelector('#modal-url input')
      imageInput.value = ""
      imageUrlInput.classList.remove('hidden')
      imageUrlInput.classList.add('flex')
    }
    function onCrossClick() {
      const imageUrlInput = document.querySelector('#modal-url')
      imageUrlInput.classList.add('hidden')
      imageUrlInput.classList.remove('flex')
    }
    function onCheckClick() {
      const imageUrlInput = document.querySelector('#modal-url')
      const protSocietyImage = document.querySelector('#protSocietyImage')
      const imageInputValue = document.querySelector('#modal-url input').value
      const tuImagen = document.querySelector('#tuImagen')
      imageUrlInput.classList.add('hidden')
      imageUrlInput.classList.remove('flex')
      tuImagen.classList.add('hidden')
      tuImagen.classList.remove('flex')
      protSocietyImage.src = imageInputValue
    }
  </script>
</div>