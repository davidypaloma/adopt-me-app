<div class="h-screen w-auto overflow-y-hidden bg-brown text-green">
  <div class="flex flex-col items-center justify-center font-lobster">
    <img class="mt-5 w-1/6" src="/img/DOG.png" alt="Dog Logo" />
    <h1 class="text-5xl uppercase">{{protSociety.name}}</h1>
  </div>

  <div class="absolute w-screen">
    <div
      class="ml-[5.5rem] mt-12 flex h-48 w-6/12 items-center rounded-full border-[10px] border-brown"
    >
      <div
        class="m-1 flex h-40 w-40 items-center justify-center rounded-full bg-brown"
      >
        <img
          class="m-1 h-[9rem] rounded-full object-cover object-top"
          src="{{protSociety.image}}"
          alt="{{protSociety.name}} image"
        />
      </div>
    </div>

    <p
      class="font poppins align-start ml-6 mt-3 flex w-64 text-2xl text-brown"
    >Nombre</p>
    <div
      class="mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-red px-3 py-1 font-poppins text-xl font-extralight text-brown"
    >
      <img
        class="mr-2 h-5 w-5 text-green"
        src="/img/USER_ICON.png"
        alt="user icon"
      />
      <p>{{protSociety.name}}</p>
    </div>

    <p
      class="font poppins align-start ml-6 mt-3 flex w-64 text-2xl text-brown"
    >Email</p>
    <div
      class="mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-red px-3 py-1 font-poppins text-xl font-extralight text-brown"
    ><img
        class="mr-2 h-4 w-5 text-green"
        src="/img/MAIL_ICON.png"
        alt="user icon"
      />
      <p>{{protSociety.email}}</p>
    </div>

    <p
      class="font poppins align-start ml-6 mt-3 flex w-64 text-2xl text-brown"
    >Localizaci√≥n</p>
    <div
      class="mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-red px-3 py-1 font-poppins text-xl font-extralight text-brown"
    >
      <img
        class="mr-2 h-4 w-5 text-green"
        src="/img/MAIL_ICON.png"
        alt="user icon"
      />
      <p>{{protSociety.location}}</p>
    </div>

    <div class="mt-8 flex justify-evenly">
      <a
        class="mt-1 w-3/12 text-center rounded-full bg-red px-3 py-1 font-poppins text-sm font-extralight text-brown"
        href="/pets/new"
      >Nuevo animalito</a>
      <a
        class="mt-1 w-3/12 text-center rounded-full bg-red px-3 py-1 font-poppins text-sm font-extralight text-brown"
        href="/profile/{{protSociety.id}}/edit"
      >Editar perfil</a>
      <a
        class="mt-1 w-3/12 text-center rounded-full bg-red px-3 py-1 font-poppins text-sm font-extralight text-brown"
        href="/pets"
      >Consultar listado</a>
    </div>
    <a
      class="text-center mx-auto mt-8 block w-6/12 items-center rounded-full bg-red px-3 py-1 font-poppins text-sm font-extralight text-brown"
      href="{{protSociety.website}}"
    >Visitar web</a>
  </div>

  <div class="mt-[10px] h-screen rounded-t-3xl bg-green"></div>

</div>