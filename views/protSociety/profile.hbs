<div class="h-screen w-auto overflow-y-hidden bg-brown text-green">

  <div class="mt-5 grid grid-cols-3 font-poppins text-xs text-brown">
    <a href="/">
      <div class="h-10">
        <img class="pt-1 pl-6" src="/img/LOGO.png" alt="AdoptMe Logo" />
      </div>
    </a>
    <div class="h-10"></div>
    <div class="flex h-10 items-center justify-end">

      <a href="/profile/edit">
        <div class="flex h-7 w-28 items-center rounded-l-full bg-red pl-3">
          <img
            class="mr-2 h-3/5 w-auto"
            src="/img/EDIT_ICON_GREEN.png"
            alt="user icon"
          />
          <p>Editar</p>
        </div>
      </a>
    </div>

    <div class="h-10"></div>
    <div class="flex h-10 items-center justify-center">
      <img class="absolute mt-24 w-1/3" src="/img/DOG.png" alt="Dog Logo" />
    </div>
    <div class="flex h-10 items-center justify-end">
      <a href="/pets/new">
        <div class="flex h-7 w-28 items-center rounded-l-full bg-green pl-3">
          <img
            class="mr-2 h-3/5 w-auto"
            src="/img/PLUS_ICON.png"
            alt="user icon"
          />
          <p>Nuevo</p>
        </div>
      </a>
    </div>

    <div class="h-10"></div>
    <div class="h-10"></div>
    <div class="flex h-10 items-center justify-end">
      <a href="/pets">
        <div class="flex h-7 w-28 items-center rounded-l-full bg-green pl-3">
          <img
            class="mr-2 h-3/5 w-auto"
            src="/img/ADOPTED_ICON.png"
            alt="user icon"
          />
          <p>Peludos</p>
        </div>
      </a>
    </div>
  </div>

  <div class="absolute mt-8 w-screen">
    <h1
      class="mt-[1.5rem] mb-5 text-center font-lobster text-5xl uppercase text-brown"
    >{{protSociety.name}}</h1>

    <div class="flex justify-center">
      <div
        class="flex h-[10rem] w-[10rem] items-center justify-center rounded-full bg-brown"
      >
        <div
          class="flex h-[9rem] w-[9rem] items-center justify-center rounded-full border-[6px] border-green"
        >
          <img
            class="h-[7.5rem] w-[7.5rem] rounded-full object-cover object-top"
            src="{{protSociety.image}}"
            alt="{{protSociety.name}} image"
          />
        </div>
      </div>
    </div>

    <p
      class="font poppins align-start ml-6 mt-1 flex w-64 text-2xl text-brown"
    >Nombre</p>
    <div
      class="font-base mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-brown px-3 py-1 font-poppins text-lg text-green"
    >
      <img
        class="mr-2 h-5 w-5"
        src="/img/USER_ICON_GREEN.png"
        alt="user icon"
      />
      <p>{{protSociety.name}}</p>
    </div>

    <p
      class="font poppins align-start ml-6 mt-3 flex w-64 text-2xl text-brown"
    >Email</p>
    <div
      class="font-base mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-brown px-3 py-1 font-poppins text-lg text-green"
    >
      <img
        class="mr-2 h-4 w-5"
        src="/img/MAIL_ICON_GREEN.png"
        alt="user icon"
      />
      <p>{{protSociety.email}}</p>
    </div>

    <p
      class="font poppins align-start ml-6 mt-3 flex w-64 text-2xl text-brown"
    >Localización</p>
    <div
      class="font-base mt-1 ml-3 flex w-11/12 items-center justify-start rounded-full bg-brown px-3 py-1 font-poppins text-lg text-green"
    >
      <img
        class="mr-2 h-5 w-4"
        src="/img/LOCATION_ICON_GREEN.png"
        alt="user icon"
      />
      <p>{{protSociety.location}}</p>
    </div>

    <div class="flex">
      <a
        class="font-base mx-auto mt-10 flex w-5/12 items-center justify-center rounded-full bg-brown px-3 py-1 text-center font-poppins text-sm text-green"
        href="{{protSociety.website}}"
        target="_blank"
      >
        <img class="mr-2 h-auto w-4" src="/img/WEB-ICON_GREEN.svg" alt="" />
        Visitar web</a>
      <a
        class="font-base mx-auto mt-10 flex w-5/12 items-center justify-center rounded-full bg-red px-3 py-1 text-center font-poppins text-sm text-brown"
        href="/logout"
      >
        <img class="mr-2 h-auto w-2" src="/img/CROSS-ICON.png" alt="" />
        Cerrar sesión</a>
    </div>
  </div>

  <div class="mt-4 h-screen rounded-t-3xl bg-green"></div>

</div>