<div class="h-screen w-auto overflow-y-hidden bg-brown text-green">
  <div class="flex items-center justify-center">
    <img class="absolute mt-24 w-1/6" src="/img/DOG.png" alt="Dog Logo" />
  </div>
  <h1
    class="mt-[4.5rem] mb-6 text-center font-lobster text-5xl uppercase"
  >{{protSociety.name}}</h1>

  <div class="absolute w-screen">
      <div
        class="ml-[5.5rem] mt-10 flex h-48 w-6/12 items-center rounded-full border-[10px] border-brown"
      >
        <div
          class="m-1 flex h-40 w-40 items-center justify-center rounded-full bg-brown"
        >
          <img
            class="m-1 h-[9rem] rounded-full object-cover object-top text-center"
            src="{{currentProtSociety.image}}"
            alt="{{currentProtSociety.name}} image"
          />
        </div>
      </div>

    <form action="/profile/{{currentProtSociety.id}}" method="POST">
      <div
        class="mt-15 ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown{{#if errors.name}}text-rose-300 border-b-rose-300 text-sm block{{/if}}"
      >
        <img
          class="mr-2 h-auto w-4"
          src="/img/USER_ICON.png"
          alt="user icon"
        />
        <input
          class="w-11/12 bg-transparent focus:outline-none"
          name="name"
          type="text"
          id="name"
          value="{{currentProtSociety.name}}"
        />
      </div>
        {{#if errors.name}}
          <p class="ml-8 text-sm text-rose-300 ">*{{errors.name.message}}</p>
        {{/if}}

      <div
        class="mt-8 ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.email}}text-rose-300 border-b-rose-300 text-sm block{{/if}}"
      >
        <img
          class="mr-2 h-auto w-4"
          src="/img/MAIL_ICON.png"
          alt="user icon"
        />
        <input
          class="w-11/12 bg-transparent focus:outline-none"
          name="email"
          type="email"
          id="email"
          value="{{currentProtSociety.email}}"
        />
      </div>
       {{#if errors.email}}
          <p class="ml-8 text-sm text-rose-300 ">*{{errors.email.message}}</p>
        {{/if}}

      <div
        class="mt-8 ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown {{#if errors.location}}text-rose-300 border-b-rose-300 text-sm block{{/if}}"
      >
        <img
          class="mr-2 h-auto w-4"
          src="/img/PLUS_ICON.png"
          alt="user icon"
        />
        <input
          class="w-11/12 bg-transparent focus:outline-none"
          name="location"
          type="text"
          id="location"
          value="{{currentProtSociety.location}}"
        />
      </div>
        {{#if errors.location}}
          <p class="ml-8 text-sm text-rose-300 ">*{{errors.location.message}}</p>
        {{/if}}

      <div
        class="mt-8 ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown"
      >
        <img
          class="mr-2 h-auto w-4"
          src="/img/MAIL_ICON.png"
          alt="user icon"
        />
        <input
          class="w-11/12 bg-transparent focus:outline-none"
          name="website"
          type="text"
          id="website"
          value="{{currentProtSociety.website}}"
        />
      </div>

      <div
        class="mt-8 ml-7 flex w-10/12 items-center justify-start border-b border-brown px-1 py-1 font-poppins text-sm font-medium text-brown" 
      >
        <img
          class="mr-2 h-auto w-4"
          src="/img/PASS_ICON.png"
          alt="user icon"
        />
        <input
          class="w-11/12 bg-transparent focus:outline-none placeholder-brown placeholder:opacity-50"
          name="password"
          type="password"
          id="password"
          placeholder="Nueva contraseÃ±a (si desea modificar)"
        />
      </div> 

      <button
        class="mx-auto mt-8 block w-6/12 items-center rounded-full bg-brown px-3 py-1 text-center font-poppins text-lg font-medium text-green"
        type="submit"
      >Guardar</button>
    </form>
  </div>

  <div class="h-screen rounded-t-3xl bg-green"></div>
</div>