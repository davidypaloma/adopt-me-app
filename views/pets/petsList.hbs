<form>
  <input
    value="{{query.name}}"
    type="text"
    name="name"
    id=""
    placeholder="Nombre"
  />

  <input
    value="{{query.class}}"
    type="text"
    name="class"
    id=""
    placeholder="Tipo de animal"
  />

  <input
    value="{{query.sex}}"
    type="text"
    name="sex"
    id=""
    placeholder="Sexo"
  />

  <input
    value="{{query.breed}}"
    type="text"
    name="breed"
    id=""
    placeholder="Raza"
  />
  <button type="submit">search</button>
