<div>
  {{#each pets as |pet|}}
    <a href="/pets/{{pet.id}}"><h2>{{pet.name}}</h2></a>
    <img width="550px" src="{{pet.image}}" />
    <ul>
      <li>class: {{pet.class}}</li>
      <li>age: {{pet.age}}</li>
      <li>sex: {{pet.sex}}</li>
      <li>breed: {{pet.breed}}</li>
      <li>energieLevel: {{pet.energieLevel}}</li>
      <li>healthStatus: {{pet.healthStatus}}</li>
      <li>isAdopted-{{pet.isAdopted}}</li>
      <li>description: {{pet.description}}</li>
      <li>protSociety: {{pet.protSociety.name}}</li>
      <li>Location: {{pet.protSociety.location}}</li>
      {{!-- <li>Id: {{pet.protSociety.id}}</li> --}}
    </ul>

    {{!-- <button onclick="javascript:location.href='{{pet.protSociety.website}}'" type="button">NOMBRE DE LA PROTECTORA</button> --}}

  {{/each}}
